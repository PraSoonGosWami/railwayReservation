<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PNR No."
                    android:padding="2dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/colorWhite"/>

                <TextView
                    android:id="@+id/ticketPNR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9254426889"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seat No."
                    android:layout_marginTop="14dp"
                    android:padding="2dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:id="@+id/ticketSeatNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9254426889"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/ticketClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class : 2A"
                    android:layout_marginTop="14dp"
                    android:padding="2dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/ticketTrainNameNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Howrah Jmp Exp    (13165)"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/ticketSrcDest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Howrah -> Bhagalpur"/>

                <TextView
                    android:id="@+id/ticketDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="16-Sep-2018"/>

                <TextView
                    android:id="@+id/ticketTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Time : 14:30-5:45"/>
                <TextView
                    android:id="@+id/ticketFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Fare : 2522"
                    />


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>